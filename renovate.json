{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:recommended"
	],
	"groupName": "all dependencies",
	"groupSlug": "all",
	"lockFileMaintenance": {
		"enabled": true,
		"automerge": true
	},
	"packageRules": [
		{
			"groupName": "all dependencies",
			"groupSlug": "all",
			"matchPackageNames": [
				"*"
			]
		},
		{
			"matchUpdateTypes": [
				"minor",
				"patch"
			],
			"matchCurrentVersion": "!/^0/",
			"automerge": true
		}
	],
	"separateMajorMinor": false,
	"baseBranches": [
		"develop"
	],
	"branchPrefix": "renovate-{{baseBranch}}-",
	"automergeType": "pr"
}
