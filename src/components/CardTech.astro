---
import { Image } from 'astro:assets'

interface Props {
  imagePath: string
  altText: string
}

const { imagePath, altText } = Astro.props
const images = import.meta.glob('/src/assets/images/tech/*.{jpeg,jpg,png,gif,webp}')
---

<Fragment>
  <!-- @ts-ignore -->
  <Image
    class='scale-100 cursor-pointer object-cover transition duration-500 hover:scale-90'
    src={images[imagePath]()}
    alt={altText}
  />
</Fragment>
