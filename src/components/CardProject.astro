---
import { Image } from 'astro:assets'
// import { Image } from '@unpic/astro'

interface Props {
  imagePath: string
  altText: string
}

const { imagePath, altText } = Astro.props
const images = import.meta.glob(
  '/src/assets/images/projects/*.{jpeg,jpg,png,gif,webp}'
)
---

<Fragment>
  <Image
    class='scale-100 cursor-pointer rounded-md object-cover shadow-2xl transition duration-500 hover:scale-95'
    src={images[imagePath]()}
    alt={altText}
  />
</Fragment>
