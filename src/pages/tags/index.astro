---
import BaseLayout from '../../layouts/BaseLayout.astro'

const pageTitle = 'Tag Index'
const blogPosts = await Astro.glob('../../content/blog/*.mdx')
const bookNotes = await Astro.glob('../../content/book-notes/*.md')
const allPosts = [...blogPosts, ...bookNotes]
const tags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())]
---

<BaseLayout pageTitle={pageTitle}>
  <h1>Tags</h1>
  <div class="tags">
    {
      tags.map((tag) => (
        <p class="tag">
          <a href={`/tags/${tag}`}>{tag}</a>
        </p>
      ))
    }
  </div>
</BaseLayout>

<style>
  a {
    color: #00539f;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    margin: 0 auto;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: 0.5em;
    padding: 0.5em 1em;
    font-size: 1.15em;
    background-color: #f8fcfd;
  }
</style>
