{
	"name": "renems.com",
	"version": "3.0.0",
	"type": "module",
	"scripts": {
		"dev": "astro dev",
		"start": "astro dev",
		"build": "astro check && astro build && jampack ./dist",
		"preview": "astro preview",
		"sync": "astro sync",
		"astro": "astro",
		"check": "astro check",
		"format": "nlx @biomejs/biome format ./src --write",
		"lint": "nlx @biomejs/biome lint ./src ",
		"fix": "nlx @biomejs/biome check --write --unsafe ./src",
		"ci": "biome format --changed",
		"knip": "knip",
		"cz": "cz",
		"postinstall": "lefthook install",
		"clean": "nlx rimraf node_modules/ .astro/ dist/",
		"upgrade": "npx @astrojs/upgrade",
		"deps": "nlx taze -Iwi"
	},
	"dependencies": {
		"@astrojs/check": "^0.7.0",
		"@astrojs/mdx": "^3.1.0",
		"@astrojs/rss": "^4.0.6",
		"@astrojs/svelte": "^5.5.0",
		"@fontsource-variable/assistant": "^5.0.18",
		"@fontsource/inter": "^5.0.18",
		"@resvg/resvg-js": "^2.6.2",
		"@unpic/astro": "^0.0.46",
		"astro": "^4.10.1",
		"fuse.js": "^7.0.0",
		"github-slugger": "^2.0.0",
		"mdast-util-to-string": "^4.0.0",
		"reading-time": "^1.5.0",
		"remark-collapse": "^0.1.2",
		"remark-toc": "^9.0.0",
		"satori": "^0.10.13",
		"tailwindcss": "^3.4.4"
	},
	"devDependencies": {
		"@astrojs/react": "^3.5.0",
		"@astrojs/sitemap": "^3.1.5",
		"@astrojs/tailwind": "^5.1.0",
		"@biomejs/biome": "^1.8.0",
		"@commitlint/cli": "^19.3.0",
		"@commitlint/config-conventional": "^19.2.2",
		"@divriots/jampack": "^0.24.4",
		"@tailwindcss/typography": "^0.5.13",
		"@types/github-slugger": "^2.0.0",
		"@types/node": "^20.14.2",
		"@types/react": "^18.3.3",
		"commitizen": "^4.3.0",
		"cz-conventional-changelog": "^3.3.0",
		"knip": "^5.18.1",
		"lefthook": "^1.6.15",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"rimraf": "^5.0.7",
		"svelte": "5.0.0-next.111",
		"taze": "^0.13.8",
		"typescript": "^5.4.5"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"volta": {
		"node": "22.2.0"
	},
	"pnpm": {
		"overrides": {
			"ip@=2.0.0": ">=2.0.1",
			"tar@<6.2.1": ">=7.2.0",
			"undici@<=5.28.2": ">=6.18.2",
			"undici@>=6.0.0 <6.11.1": ">=6.11.1",
			"vite@>=5.1.0 <=5.1.6": ">=5.1.7"
		}
	}
}
