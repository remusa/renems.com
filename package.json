{
	"name": "renems.com",
	"version": "3.0.0",
	"type": "module",
	"scripts": {
		"start": "astro dev",
		"build": "astro check && astro build && jampack ./dist",
		"preview": "astro preview",
		"sync": "astro sync",
		"astro": "astro",
		"check": "astro check",
		"format": "nlx @biomejs/biome format ./src --write",
		"lint": "nlx @biomejs/biome lint ./src ",
		"fix": "nlx @biomejs/biome check --write --unsafe ./src",
		"ci": "biome format --changed",
		"knip": "knip",
		"cz": "cz",
		"postinstall": "lefthook install",
		"clean": "nlx rimraf node_modules/ .astro/ dist/",
		"deps": "nlx taze -Iwi",
		"deps:upgrade": "npx @astrojs/upgrade"
	},
	"dependencies": {
		"@astrojs/check": "^0.9.3",
		"@astrojs/mdx": "^3.1.5",
		"@astrojs/rss": "^4.0.7",
		"@astrojs/svelte": "^5.7.0",
		"@fontsource-variable/assistant": "^5.0.19",
		"@fontsource/inter": "^5.0.20",
		"@resvg/resvg-js": "^2.6.2",
		"@unpic/astro": "^0.0.46",
		"astro": "^4.15.2",
		"fuse.js": "^7.0.0",
		"github-slugger": "^2.0.0",
		"mdast-util-to-string": "^4.0.0",
		"reading-time": "^1.5.0",
		"remark-collapse": "^0.1.2",
		"remark-toc": "^9.0.0",
		"satori": "^0.10.14",
		"tailwindcss": "^3.4.10"
	},
	"devDependencies": {
		"@astrojs/react": "^3.6.2",
		"@astrojs/sitemap": "^3.1.6",
		"@astrojs/tailwind": "^5.1.0",
		"@biomejs/biome": "^1.8.3",
		"@commitlint/cli": "^19.4.0",
		"@commitlint/config-conventional": "^19.2.2",
		"@divriots/jampack": "^0.25.0",
		"@tailwindcss/typography": "^0.5.14",
		"@types/node": "^22.5.0",
		"@types/react": "^18.3.4",
		"commitizen": "^4.3.0",
		"cz-conventional-changelog": "^3.3.0",
		"knip": "^5.27.3",
		"lefthook": "^1.7.14",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"rimraf": "5.0.10",
		"svelte": "5.0.0-next.238",
		"taze": "^0.16.6",
		"typescript": "^5.5.4"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"engines": {
		"node": ">=18"
	},
	"engineStrict": true,
	"pnpm": {
		"overrides": {
			"ip@=2.0.0": ">=2.0.1",
			"tar@<6.2.1": ">=7.4.0",
			"undici@<=5.28.2": ">=6.19.2",
			"undici@>=6.0.0 <6.11.1": ">=6.11.1",
			"vite@>=5.1.0 <=5.1.6": ">=5.1.7",
			"fast-xml-parser@<4.4.1": ">=4.4.1",
			"micromatch@<4.0.8": ">=4.0.8"
		}
	}
}
