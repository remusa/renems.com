{
  "name": "template-astro-paper",
  "version": "3.0.0",
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build && jampack ./dist",
    "preview": "astro preview",
    "sync": "astro sync",
    "astro": "astro",
    "check": "astro check",
    "fix": "pnpm dlx @biomejs/biome check --apply-unsafe ./src",
    "format": "pnpm dlx @biomejs/biome format ./src --write",
    "lint": "pnpm dlx @biomejs/biome lint ./src ",
    "cz": "cz",
    "prepare": "husky install",
    "clean": "npx rimraf node_modules/ .astro/ dist/",
    "deps": "npx taze -Iwi"
  },
  "dependencies": {
    "@astrojs/check": "^0.4.1",
    "@astrojs/mdx": "^2.0.4",
    "@astrojs/rss": "^4.0.2",
    "@astrojs/svelte": "^5.0.3",
    "@fontsource-variable/assistant": "^5.0.15",
    "@fontsource/inter": "^5.0.15",
    "@resvg/resvg-js": "^2.4.1",
    "@unpic/astro": "^0.0.35",
    "astro": "^4.1.2",
    "fuse.js": "^6.6.2",
    "github-slugger": "^2.0.0",
    "mdast-util-to-string": "^4.0.0",
    "reading-time": "^1.5.0",
    "remark-collapse": "^0.1.2",
    "remark-toc": "^9.0.0",
    "satori": "^0.10.11",
    "svelte": "5.0.0-next.15",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@astrojs/react": "^3.0.9",
    "@astrojs/sitemap": "^3.0.4",
    "@astrojs/tailwind": "^5.1.0",
    "@biomejs/biome": "^1.5.1",
    "@commitlint/cli": "^18.4.1",
    "@commitlint/config-conventional": "^18.4.0",
    "@divriots/jampack": "^0.22.1",
    "@tailwindcss/typography": "^0.5.10",
    "@types/github-slugger": "^1.3.0",
    "@types/react": "^18.2.39",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "taze": "^0.12.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{astro,js,jsx,ts,tsx,md,mdx,json}": [
      "nlx biome check --changed"
    ]
  },
  "volta": {
    "node": "21.2.0"
  }
}
